<mvc:View controllerName="playground.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">

<Page title="View1">
    <content>
        <VBox alignItems="Center" class="sapUiSmallMarginBottom">
            <Title text="TITLE" level="H1" titleStyle="H3" />
            <Title text="TITLE" level="H2" titleStyle="H3"/>
            <Title text="TITLE" level="H3" titleStyle="H3"/>
        </VBox>
        <VBox class="sapUiContentPadding">
            <Label text="Enter your name" class="sapUiContentPadding, sapUiSmallMarginBeginEnd" required="true"/>
            <FlexBox alignItems="Center" justifyContent="Start" 
                     class="sapUiSmallMarginBeginEnd">
                <items>
                    <Input type="Text" placeholder="Enter your name" showValueHelp="true">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Input>
                    <core:Icon src="sap-icon://display" size="1.5rem" class="sapUiSmallMarginBegin"/>
                </items>
            </FlexBox>
        </VBox>
        <VBox class="sapUiContentPadding">
           <Label text="Select an option" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" required="true"/>
           <RadioButtonGroup>
             <RadioButton text="Option 1"/>
             <RadioButton text="Option 2"/>
             <RadioButton text="Option 3"/>
           </RadioButtonGroup>
        </VBox>
    </content>
</Page>

</mvc:View>